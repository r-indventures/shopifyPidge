html(lang="en")
    head
        meta(charset='utf-8')
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1")
        title #{title} | Pidge App
        link(
            rel='stylesheet',
            href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css',
            integrity='sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u',
            crossorigin='anonymous'
        )
        link(
            rel="stylesheet"
            href="https://use.fontawesome.com/releases/v5.8.1/css/all.css"
            integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf"
            crossorigin="anonymous"
        )

        link(rel='stylesheet', href='/_a/css/style.css')
        link(rel='stylesheet', href='/_a/css/dropzone.css')
        style(type="text/css").
            .btn-primary, .btn-primary:hover, .btn-primary:active, .btn-primary:visited {background-color: #4B0082;}
    body
        header
            nav.navbar.navbar-default.navbar-fixed-top
                .container-fluid
                    .navbar-header
                        a.navbar-brand(href="/")
                            img( src="/images/white-logo.jpg", height="30px")
